#!/bin/bash

export YAKL_ARCH="CUDA"

export YAKL_CUDA_FLAGS="-O0 -g -DYAKL_DEBUG  -arch sm_35 -res-usage"
export YAKL_C_FLAGS="-O0 -g"
export YAKL_F90_FLAGS="-ffree-line-length-none -O0 -g -fcheck=all"
export NC_INCLUDE="/opt/netcdf_gnu/include"
export NC_LIBS="`/opt/netcdf_gnu/bin/nc-config --libs`"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
