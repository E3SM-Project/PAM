source $MODULESHOME/init/bash
module purge
module load DefApps gcc/8.1.1 cuda/10.1.105 netcdf-cxx4 netcdf cmake/3.13.4

export CXX=g++

export YAKL_HOME=../../../externals/YAKL
unset CXXFLAGS
export NCFLAGS="-I${OLCF_NETCDF_CXX4_ROOT}/lib -lnetcdf_c++4 -L/ccs/home/imn/yaml/lib64 -lyaml-cpp"
export YAKL_CUDA_FLAGS="-res-usage -O3 -arch sm_70 -DTHRUST_IGNORE_CUB_VERSION_CHECK -I${OLCF_NETCDF_CXX4_ROOT}/include -I/ccs/home/imn/yaml/include"
export YAKL_ARCH="CUDA"

