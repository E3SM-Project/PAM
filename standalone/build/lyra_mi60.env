#!/bin/bash

source $MODULESHOME/init/bash
module load rocm 

unset YAKL_ARCH

export YAKL_ARCH=HIP
export CC=hipcc
export CXX=hipcc
export YAKL_HIP_FLAGS="-O3 -DYAKL_AUTO_PROFILE -DPAM_DEBUG -I/ccs/home/imn/libs_hip/yaml-cpp/include -I/ccs/home/imn/libs_hip/netcdf/include --offload-arch=gfx906"
unset CXXFLAGS
export FFLAGS="-O3"
export F77FLAGS="-O3"
export F90FLAGS="-O3"
export NCFLAGS="`/ccs/home/imn/libs_hip/netcdf/bin/ncxx4-config --libs` `/ccs/home/imn/libs_hip/netcdf/bin/nc-config --libs` -L/ccs/home/imn/libs_hip/yaml-cpp/lib64 -lyaml-cpp"

