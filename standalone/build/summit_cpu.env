#!/bin/bash

source $MODULESHOME/init/bash
module purge
module load DefApps gcc/9.3.0 cuda/11.4.0 netcdf-cxx4 netcdf cmake/3.13.4

export CC=gcc
export CXX=g++

export YAKL_HOME=../../../externals/YAKL
unset CXXFLAGS
export NCFLAGS="-L${OLCF_NETCDF_CXX4_ROOT}/lib -lnetcdf_c++4 -L/ccs/home/imn/yaml/lib64 -lyaml-cpp"
export YAKL_OPENMP_FLAGS="-fopenmp -O3 -DYAKL_PROFILE -I${OLCF_NETCDF_CXX4_ROOT}/include -I/ccs/home/imn/yaml/include"
export FFLAGS="-O3"
export FCFLAGS="-O3"
export F77FLAGS="-O3"
export F90FLAGS="-O3"
export YAKL_ARCH="OPENMP"

