#!/bin/bash

source $MODULESHOME/init/bash
module purge
module load DefApps gcc/9.3.0 cuda/11.4.0 cmake hdf5 curl sz zlib netcdf-c

export CC=gcc
export CXX=g++

unset YAKL_ARCH

export YAKL_CXX_FLAGS="-DOLCF_SUMMIT -O3 -DYAKL_PROFILE -I${OLCF_NETCDF_C_ROOT}/include -I/ccs/home/imn/yaml/include"
export YAKL_F90_FLAGS="-O2"
export YAKL_C_FLAGS="-O3"
export NCFLAGS="`${OLCF_NETCDF_C_ROOT}/bin/nc-config --libs` -L/ccs/home/imn/yaml/lib64 -lyaml-cpp"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
