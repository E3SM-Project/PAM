#!/bin/bash

export YAKL_ARCH=CUDA

export YAKL_CUDA_FLAGS="-res-usage -O3 -arch sm_35 --use_fast_math -ccbin mpic++ -DTHRUST_IGNORE_CUB_VERSION_CHECK -DYAKL_PROFILE -I/opt/netcdf_gnu/include"
export YAKL_F90_FLAGS="-O2"
export YAKL_C_FLAGS="-O3 -march=native"
export NCFLAGS="`/opt/netcdf_gnu/bin/nc-config --libs`"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
