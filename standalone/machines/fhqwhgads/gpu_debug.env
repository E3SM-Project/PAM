#!/bin/bash

export YAKL_ARCH=CUDA

export CXX=mpic++
export CC=mpicc
export FC=mpif90

export YAKL_CUDA_FLAGS="-g -G -O0 -DYAKL_DEBUG -arch sm_50 -DPAM_FUNCTION_TIMERS -DYAKL_PROFILE --use_fast_math -ccbin mpic++ -I`nc-config --includedir`"
export YAKL_F90_FLAGS="-O0 -g -DSCREAM_DOUBLE_PRECISION -ffree-line-length-none"
export PAM_LINK_FLAGS="`nc-config --libs`"

unset CXXFLAGS
unset FFLAGS
unset F77FLAGS
unset F90FLAGS
